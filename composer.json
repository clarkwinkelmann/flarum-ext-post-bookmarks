{
    "name": "clarkwinkelmann/flarum-ext-post-bookmarks",
    "description": "Bookmark posts to find them easily later",
    "keywords": [
        "flarum",
        "bookmark"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.0"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-post-bookmarks",
        "forum": "https://discuss.flarum.org/d/27698"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\PostBookmarks\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Post Bookmarks",
            "category": "feature",
            "icon": {
                "name": "fas fa-bookmark",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/27698"
        }
    }
}
